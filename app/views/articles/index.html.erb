<h1> Browse articles </h1>

<% @articles.each do |article| %>
<h2> <%= article.title %> </h2>
<p> <%= article.content %> </p>
  <div class="button_container">
  <button class="btn-medium"> <%= link_to "Read article", article_path(article) %> </button>
  <button class="btn-medium"> <%= link_to "Update article", edit_article_path(article) %></button>
  <button class="btn-medium"> <%= link_to "Delete article", article_path(article), method: :delete %></button>
  </div>
<% end %>
